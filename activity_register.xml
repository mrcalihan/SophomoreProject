<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.natal.speakit.Register">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <EditText
            android:id="@+id/et_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            tools:layout_editor_absoluteX="64dp"
            tools:layout_editor_absoluteY="321dp"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/et_email"
            android:layout_alignStart="@+id/brn_register" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Email"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="64dp"
            tools:layout_editor_absoluteY="246dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/et_pass"
            android:layout_marginTop="85dp" />

        <EditText
            android:id="@+id/et_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Age"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="64dp"
            tools:layout_editor_absoluteY="154dp"
            android:layout_below="@+id/et_name"
            android:layout_alignStart="@+id/et_name"
            android:layout_marginTop="23dp" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Full Name"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="64dp"
            tools:layout_editor_absoluteY="64dp"
            android:layout_marginTop="22dp"
            android:layout_below="@+id/et_pass"
            android:layout_alignEnd="@+id/btn_login" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="login2"
            android:text="Login"
            tools:layout_editor_absoluteX="217dp"
            tools:layout_editor_absoluteY="393dp"
            android:layout_alignBaseline="@+id/brn_register"
            android:layout_alignBottom="@+id/brn_register"
            android:layout_toEndOf="@+id/brn_register"
            android:layout_marginStart="43dp" />

        <Button
            android:id="@+id/brn_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onReg"
            android:text="Register"
            tools:layout_editor_absoluteX="44dp"
            tools:layout_editor_absoluteY="393dp"
            android:layout_marginBottom="64dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="60dp"
            />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
